import colorama
from colorama import Fore, Back, Style

colorama.init()

print(Fore.RED + "Это красный текст")
print(Fore.GREEN + "Это зеленый текст")
print(Back.YELLOW + "Текст с желтым фоном")
print(Fore.BLUE + Back.WHITE + "Синий текст на белом фоне")

print(Style.BRIGHT + "Яркий текст")
print(Style.DIM + "Тусклый текст")
print(Style.RESET_ALL + "Сброс всех стилей")

print(Fore.CYAN + "Цветной" + Fore.RESET + " текст и " + Back.MAGENTA + "фон")

colorama.deinit()
